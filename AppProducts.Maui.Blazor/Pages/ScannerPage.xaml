<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
             x:Class="AppProducts.Maui.Blazor.Pages.ScannerPage"
             Title="Scan Barcode">
    <Grid>
        <zxing:CameraBarcodeReaderView
            x:Name="barcodeReader"
            BarcodesDetected="BarcodesDetected_Handler"
            Options="{Binding Options}" />

        <!-- Rectangle/Border overlay for barcode capture guidance -->
        <Border
            Stroke="Lime"
            StrokeThickness="4"
            BackgroundColor="Transparent"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            WidthRequest="250"
            HeightRequest="100"
            InputTransparent="True"
            />

        <Label Text="Point your camera at a barcode"
               TextColor="White"
               BackgroundColor="#80000000"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               Padding="20"/>

        <Label x:Name="barcodeLabel"
               Text=""
               TextColor="Lime"
               BackgroundColor="#80000000"
               HorizontalOptions="Center"
               VerticalOptions="End"
               Padding="20"
               FontSize="24"/>

        <Button x:Name="scanAgainButton"
                Text="Scan Another Barcode"
                IsVisible="False"
                Clicked="ScanAgainButton_Clicked"
                HorizontalOptions="Center"
                VerticalOptions="End"
                Margin="0,0,0,80"
                />
    </Grid>
</ContentPage>